{{!-- Header --}}
<div class="row">
  <div class="bg-light p-3 m-1 text-center mb-5" id="title">
    <h1 class="text-primary fw-bold">The Tech Blog</h1>
  </div>
</div>

{{!-- Sign up form --}}
<div class="row bg-light d-flex justify-content-center">
  <div class="border col-5 m-5">
    <h2 class="m-3 text-center">Sign up</h2>
    <form class="signup-form">
      <div class="mb-3">
        <label class="form-label" for="name-signup">Your Name</label>
        <input class="form-control" type="text" id="name-signup" />
      </div>
      <div class="mb-3">
        <label class="form-label" for="email-signup">Email address</label>
        <input class="form-control" type="email" id="email-signup" />
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="password-signup">Password</label>
        <input class="form-control" type="password" id="password-signup" />
      </div>

      <div class="mb-3">
        <button class="btn btn-primary" type="submit">Signup</button>
      </div>
    </form>
    <div class="text-center pb-3">Already Signed up? You can <a href="/login">Log in</a> here.</div>
  </div>
</div>

<script src="./js/signup.js"></script>