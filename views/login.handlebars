{{!-- Header --}}
<div class="row">
  <div class="bg-light p-3 m-1 text-center mb-5" id="title">
    <h1 class="text-primary fw-bold">The Tech Blog</h1>
  </div>
</div>

{{!-- Log in form --}}
<div class="row bg-light d-flex justify-content-center">
  <div class="border col-5 m-5">
    <h2 class="m-3 text-center">Login</h2>
    <form class="login-form">
      <div class="mb-3">
        <label class="form-label" for="email-login">Email address</label>
        <input class="form-control" type="email" id="email-login" />
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>

      </div>
      <div class="mb-3">
        <label class="form-label" for="password-login">Password</label>
        <input class="form-control" type="password" id="password-login" />
      </div>

      <div class="mb-3">
        <button class="btn btn-primary" type="submit">login</button>
      </div>
    </form>
    <div class="text-center pb-3">Not signed up yet? You can <a href="/signup">sign up</a> here.</div>
  </div>

</div>

<script src="./js/login.js"></script>