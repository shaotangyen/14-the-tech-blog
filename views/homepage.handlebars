{{!-- Header --}}
<div class="row">
            <div class="bg-light p-3 m-1 text-center mb-5" id="title">
                <h1 class="text-primary fw-bold">The Tech Blog</h1>
            </div>
        </div>
<!-- Display list of articles -->
{{#each articles as |article| }}
<div class="row">
            <div class="bg-light p-3 m-1">
                <h2 class="blog-post-title">{{article.title}}</h2>
                <p class="blog-post-meta">{{format_date article.date_created}} by {{article.user.name}}</p>
                <p>{{article.content}}</p>
                <p><a href="/article/{{article.id}}">Read more...</a></p>
            </div>
        </div>
{{/each}}